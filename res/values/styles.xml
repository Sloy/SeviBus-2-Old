<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.SeviBus" parent="@style/Theme.Sherlock.Light.ForceOverflow">
        <item name="android:windowBackground">@drawable/background_noise</item>
        <item name="vpiTabPageIndicatorStyle">@style/CustomTabPageIndicator</item>
		
		<item name="actionBarItemBackground">@drawable/selectable_background_sevibus</item>
		<item name="popupMenuStyle">@style/sevibus_PopupMenu</item>
		<item name="dropDownListViewStyle">@style/sevibus_DropDownListView</item>
		<item name="actionBarTabStyle">@style/sevibus_ActionBarTabStyle</item>
		<item name="actionDropDownStyle">@style/sevibus_DropDownNav</item>
		<item name="actionBarStyle">@style/sevibus_solid_ActionBar</item>

		<item name="android:selectableItemBackground">@drawable/selectable_background_sevibus</item>
		<item name="android:popupMenuStyle">@style/sevibus_PopupMenu</item>
		<item name="android:dropDownListViewStyle">@style/sevibus_DropDownListView</item>
		<item name="android:actionBarTabStyle">@style/sevibus_ActionBarTabStyle</item>
		<item name="android:actionDropDownStyle">@style/sevibus_DropDownNav</item>
		<item name="android:actionBarStyle">@style/sevibus_solid_ActionBar</item>
		<item name="android:panelBackground">@drawable/menu_hardkey_panel_sevibus</item>
        
    </style>

	<style name="sevibus_solid_ActionBar" parent="@style/Widget.Sherlock.Light.ActionBar.Solid">
		<item name="android:logo">@drawable/logo</item>
        <item name="logo">@drawable/logo</item>
        
        <item name="android:icon">@drawable/ic_launcher</item>
        <item name="icon">@drawable/ic_launcher</item>
		
        <item name="background">@drawable/ab_solid_sevibus</item>
        <item name="backgroundStacked">@drawable/ab_stacked_solid_sevibus</item>
        <item name="backgroundSplit">@drawable/ab_bottom_solid_sevibus</item>
        <item name="progressBarStyle">@style/sevibus_ProgressBar</item>

        <item name="android:background">@drawable/ab_solid_sevibus</item>
        <item name="android:backgroundStacked">@drawable/ab_stacked_solid_sevibus</item>
        <item name="android:backgroundSplit">@drawable/ab_bottom_solid_sevibus</item>
        <item name="android:progressBarStyle">@style/sevibus_ProgressBar</item>
    </style>

    <style name="sevibus_transparent_ActionBar" parent="@style/Widget.Sherlock.Light.ActionBar">
        <item name="background">@drawable/ab_transparent_sevibus</item>
        <item name="progressBarStyle">@style/sevibus_ProgressBar</item>
        
        <item name="android:background">@drawable/ab_transparent_sevibus</item>
        <item name="android:progressBarStyle">@style/sevibus_ProgressBar</item>
    </style>
	
    <style name="sevibus_PopupMenu" parent="@android:style/Widget.Holo.Light.ListPopupWindow">
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_sevibus</item>	
    </style>
	
    <style name="sevibus_DropDownListView" parent="@style/Widget.Sherlock.Light.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_sevibus</item>
    </style>

    <style name="sevibus_ActionBarTabStyle" parent="@style/Widget.Sherlock.Light.ActionBar.TabView">
        <item name="background">@drawable/tab_indicator_ab_sevibus</item>

        <item name="android:background">@drawable/tab_indicator_ab_sevibus</item>
    </style>
	
    <style name="sevibus_DropDownNav" parent="@style/Widget.Sherlock.Light.Spinner.DropDown.ActionBar">
        <item name="background">@drawable/spinner_background_ab_sevibus</item>

        <item name="android:background">@drawable/spinner_background_ab_sevibus</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_sevibus</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_sevibus</item>
    </style>
    
    <style name="sevibus_ProgressBar" parent="@style/Widget.Sherlock.Light.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_sevibus</item>
    </style>

    <style name="paradaListView">
        <item name="android:listSelector">@drawable/item_parada_selector</item> 
        <item name="android:scrollbarStyle">outsideOverlay</item>
        <item name="android:dividerHeight">2dip</item>
        <item name="android:divider">@drawable/divider_horizontal</item>
        <item name="android:cacheColorHint">#00000000</item>
        <item name="android:smoothScrollbar">false</item>
    </style>

    <style name="text_persiana_style" parent="android:Widget.TextView">
        <item name="android:fadingEdge">vertical</item>
        <item name="android:fadingEdgeLength">15sp</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>
    
    <style name="CustomTabPageIndicator" parent="Widget.TabPageIndicator">
        <item name="android:background">@drawable/custom_tab_indicator</item>
        <item name="android:textColor">#FF555555</item>
        <!-- <item name="android:textSize">18sp</item> -->
    </style>
    

</resources>