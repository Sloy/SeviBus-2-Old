<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/home_dashboard"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/home_dashboard_row1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical" >

        <Button
            android:id="@+id/main_lineas_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:drawableTop="@drawable/ic_lineas"
            android:gravity="center"
            android:text="Lineas" />

        <Button
            android:id="@+id/main_mapa_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:drawableTop="@drawable/ic_mapa"
            android:gravity="center"
            android:text="Mapa" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/home_dashboard_row2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical" >

        <Button
            android:id="@+id/main_favoritas_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:drawableTop="@drawable/ic_favoritas"
            android:gravity="center"
            android:text="Favoritas" />
        
        <Button
            android:id="@+id/main_acercade_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:drawableTop="@drawable/ic_v2"
            android:gravity="center"
            android:text="Acerca de" />
    </LinearLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="InformaciÃ³n legal, del uso de la API de TuBus y de Tussam."
        android:textColor="#555555"
        android:textSize="10sp"
        android:visibility="gone" >
    </TextView>

</LinearLayout>