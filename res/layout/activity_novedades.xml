<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/paradas_recientes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ab_recientes"
        android:gravity="center_horizontal"
        android:paddingBottom="3dip"
        android:paddingTop="5dip"
        android:text="Tweets de @TussamSevilla" />

    <include
        android:id="@android:id/empty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        layout="@layout/novedades_vacio" />
    
    <ListView
        android:id="@android:id/list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
          android:fastScrollEnabled="true"  
          style="@style/paradaListView">
        <!-- Preview: listitem=@layout/item_list_tweet -->
    </ListView>

</LinearLayout>