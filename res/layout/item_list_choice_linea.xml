<?xml version="1.0" encoding="utf-8"?>
<com.sloy.sevibus.utils.CheckableLineaLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/radio"
        android:focusable="false"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="5dip" >

        <TextView
            android:id="@+id/item_linea_nombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dip"
            android:layout_weight="3"
            android:gravity="center_horizontal"
            android:text="LAN"
            android:textColor="#990000"
            android:textSize="17sp"
            android:textStyle="bold" />

        <View
            android:layout_width="2px"
            android:layout_height="match_parent"
            android:layout_margin="2dip"
            android:background="@drawable/divider_vertical" />

        <TextView
            android:id="@+id/item_linea_trayecto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:layout_weight="1"
            android:text="Av. Cruz Roja"
            android:textSize="16sp" />
    </LinearLayout>

    <com.sloy.sevibus.utils.InertRadioButton
        android:id="@+id/radio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:checkMark="?android:attr/listChoiceIndicatorSingle"
        android:focusable="false"
        android:button="@drawable/btn_radio_holo_light" />

</com.sloy.sevibus.utils.CheckableLineaLayout>